# Python Project Configuration Template
# This file provides standardized configuration for Python code quality tools

[tool.black]
# Black - The Uncompromising Code Formatter
line-length = 100
target-version = ['py310']
include = '\.pyi?$'
exclude = '''
/(
    \.git
  | \.hg
  | \.mypy_cache
  | \.tox
  | \.venv
  | _build
  | buck-out
  | build
  | dist
  | migrations
)/
'''

[tool.isort]
# isort - Import Statement Sorter
profile = "black"
line_length = 100
multi_line_output = 3
include_trailing_comma = true
force_grid_wrap = 0
use_parentheses = true
ensure_newline_before_comments = true
skip_glob = ["*/migrations/*"]

[tool.mypy]
# Mypy - Static Type Checker
python_version = "3.10"
strict = true
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = true
disallow_any_unimported = false
no_implicit_optional = true
warn_redundant_casts = true
warn_unused_ignores = true
warn_no_return = true
check_untyped_defs = true
strict_equality = true

# Per-module options
[[tool.mypy.overrides]]
module = "tests.*"
disallow_untyped_defs = false
disallow_untyped_calls = false

[[tool.mypy.overrides]]
module = [
    "oracledb.*",
    "clickhouse_driver.*",
    "databricks.*",
]
ignore_missing_imports = true

[tool.ruff]
# Ruff - Fast Python Linter
line-length = 100
target-version = "py310"

# Enable specific rule sets
select = [
    "E",   # pycodestyle errors
    "W",   # pycodestyle warnings
    "F",   # pyflakes
    "I",   # isort
    "B",   # flake8-bugbear
    "C4",  # flake8-comprehensions
    "UP",  # pyupgrade
    "ARG", # flake8-unused-arguments
    "SIM", # flake8-simplify
]

# Never enforce these rules
ignore = [
    "E501",  # line too long (handled by black)
    "B008",  # do not perform function calls in argument defaults
    "C901",  # too complex (let developers decide)
]

# Exclude directories
exclude = [
    ".git",
    ".mypy_cache",
    ".ruff_cache",
    ".venv",
    "venv",
    "__pycache__",
    "build",
    "dist",
    "migrations",
]

[tool.ruff.per-file-ignores]
# Ignore imports in __init__.py files
"__init__.py" = ["F401"]
# Tests can use assertions and relative imports
"tests/**/*.py" = ["S101", "F403", "F405"]

[tool.pytest.ini_options]
# Pytest - Testing Framework
minversion = "7.0"
addopts = [
    "-ra",                      # Show summary of all test outcomes
    "-q",                       # Quiet mode
    "--strict-markers",         # Require all markers to be registered
    "--strict-config",          # Error on invalid config
    "--cov=src",               # Measure coverage for src directory
    "--cov-report=term-missing", # Show missing lines in terminal
    "--cov-report=html",        # Generate HTML coverage report
    "--cov-report=xml",         # Generate XML coverage report for CI
    "--cov-fail-under=80",     # Fail if coverage is below 80%
]
testpaths = ["tests"]
python_files = ["test_*.py", "*_test.py"]
python_classes = ["Test*"]
python_functions = ["test_*"]

# Custom markers
markers = [
    "unit: Unit tests (fast, isolated)",
    "integration: Integration tests (slower, require external services)",
    "slow: Slow-running tests",
    "smoke: Smoke tests for quick validation",
]

# Asyncio configuration
asyncio_mode = "auto"

[tool.coverage.run]
# Coverage - Code Coverage Measurement
source = ["src"]
branch = true
parallel = true
omit = [
    "*/tests/*",
    "*/test_*.py",
    "*/__main__.py",
    "*/migrations/*",
    "*/conftest.py",
]

[tool.coverage.report]
# Coverage reporting options
precision = 2
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "def __str__",
    "raise AssertionError",
    "raise NotImplementedError",
    "if __name__ == .__main__.:",
    "if TYPE_CHECKING:",
    "class .*\\bProtocol\\):",
    "@(abc\\.)?abstractmethod",
]
show_missing = true
skip_covered = false

[tool.coverage.html]
directory = "htmlcov"

[tool.coverage.xml]
output = "coverage.xml"

# Poetry dependency management (optional - uncomment if using Poetry)
