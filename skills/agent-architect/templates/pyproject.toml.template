# mypy = "^1.0"
# ruff = "^0.1"

# Bandit - Security Linter
[tool.bandit]
exclude_dirs = ["tests", "test", ".venv", "venv"]
skips = ["B101"]  # Skip assert_used in tests

# Pylint (if using instead of Ruff)
[tool.pylint.messages_control]
disable = [
    "C0111",  # missing-docstring (handled by ruff)
    "C0103",  # invalid-name
    "R0903",  # too-few-public-methods
]

[tool.pylint.format]
max-line-length = 100

